html{
    position: relative;
    min-height: 100%;
}

.top{
    text-align: center;
    background-image: url(<%= asset_path "bg.jpg" %>);
    background-size: cover;
}

.tweets{
    text-align: center;
    background-color: #dff;
}

.logo_img {
   margin: 50px auto;
}

header{
    width: 100%;
    background-color: #2c3e50;
    height: 54px;
}

header ul{
    margin: 0 auto;
    list-style: none;
}

header ul a{
    display: block;
    padding: 15px;
    text-decoration: none;
    color: white;
}

header li{
    float: left;
    width: auto;
}

header ul:after{
    content: "";
    display: block;
    clear: both;
}

.nicomoji{
 font-family: "Nico Moji";
}

footer{
    width: 100%;
    background-color: #2c3e50;
    padding:20px 0 10px 0;
    color: white;
    margin: auto;
    font-size: 12px;
    position: absolute;
    bottom: 0;
}