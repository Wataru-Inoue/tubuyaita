<%= form_for(@tweet, url: choose_new_or_edit ) do |f| %>

  <% if @tweet.errors.any? %>
  <div id="error_explanation">
    <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <%=f.label :つぶやき %>
  <%=f.text_area :content, rows:5, class: 'form-control js-count' %>
  <br>
  <%= f.submit '投稿',class: 'btn-btn-primary btn-block' %>
<% end %>

<link_to "一覧画面に戻る", tweets_path %>